#include<iostream>
using namespace std;

 int Sum(int n){
     if(n==0){
         return 0;
     }
 
     int prevSum = Sum(n-1);
     return n+prevSum;
 }
     int main(){
         int n;
         cin>>n;
         cout<<Sum(n);
         return 0;
     }
 // Other Method
 #include<iostream>
using namespace std;

int main(){
    int n;
    cin>>n;
    int sum=0;
    for(int i=0; i<n+1; i++){
        sum = sum + i;
    }
    cout<<sum;
    return 0;
}
